<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutPsychologistActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnBack_activity_about_psychologist"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="20dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/back_arrow_black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivProfilePicture_activity_about_psychologist"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/open_sans"
                android:src="@drawable/usericon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvName_activity_about_psychologist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans"
                android:text="Psychologist Name"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivProfilePicture_activity_about_psychologist" />

            <TextView
                android:id="@+id/tvAboutTitle_activity_about_psychologist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/open_sans"
                android:text="About"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvName_activity_about_psychologist" />

            <TextView
                android:id="@+id/tvAbout_activity_about_psychologist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/open_sans"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="40dp"
                android:text="Pulvinar congue elementum senectus nisl adipiscing nec suscipit condimentum sagittis fringilla posuere. Sodales dapibus, sagittis senectus eu rhoncus. Dolor volutpat et etiam maecenas aptent ultricies."
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAboutTitle_activity_about_psychologist" />

            <TextView
                android:id="@+id/tvAddressTitle_activity_about_psychologist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans"
                android:text="Address"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAbout_activity_about_psychologist" />

            <TextView
                android:id="@+id/tvAddress_activity_about_psychologist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="40dp"
                android:fontFamily="@font/open_sans"
                android:text="Test Address"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAddressTitle_activity_about_psychologist" />

            <TextView
                android:id="@+id/tvPricing_activity_about_psychologist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans"
                android:text="Pricing"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAddress_activity_about_psychologist" />

            <TextView
                android:id="@+id/tvOnlineChatPriceText_activity_about_psychologist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans"
                android:text="Online Chat"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPricing_activity_about_psychologist" />

            <TextView
                android:id="@+id/tvOnlineChatPrice_activity_about_psychologist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="170dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans"
                android:text="Online Chat Price"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPricing_activity_about_psychologist" />

            <TextView
                android:id="@+id/tvAppointmentPriceText_activity_about_psychologist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans"
                android:text="Appointment"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvOnlineChatPriceText_activity_about_psychologist" />

            <TextView
                android:id="@+id/tvAppointmentPrice_activity_about_psychologist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="170dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans"
                android:text="Appointment Price"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvOnlineChatPriceText_activity_about_psychologist" />

            <Button
                android:id="@+id/btnAppointment_activity_about_psychologist"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="200dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/pink_darker3"
                android:background="@color/pink_grey"
                android:text="Appointment"
                android:fontFamily="@font/open_sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAppointmentPriceText_activity_about_psychologist" />

            <Button
                android:id="@+id/btnChat_activity_about_psychologist"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="200dp"
                android:paddingHorizontal="10dp"
                android:background="@color/pink_grey"
                android:text="Chat Now"
                android:textColor="@color/pink_darker3"
                android:fontFamily="@font/open_sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAppointmentPriceText_activity_about_psychologist" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
