<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LifestyleActivity"
    android:background="#FCFCFC">

    <TextView
        android:id="@+id/tv_lifeStyleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/lifestyle"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="25sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_dailyMotivationSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_lifeStyleTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/white_card"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Daily Motivation"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="25dp"
            android:layout_marginVertical="20dp"/>

        <Switch
            android:id="@+id/switch_dailyMotivationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            tools:ignore="UseSwitchCompatOrMaterialXml"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- EXERCISE -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_dailyMotivationSwitcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/white_card"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/exercise_title"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/pink_darker3"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- BOTTOM BAR -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/menuBar"
        android:background="@drawable/menu_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="30dp">

        <ImageButton
            android:id="@+id/btn_homeButton_activity_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:src="@drawable/homebuttonunclicked2"
            app:layout_constraintTop_toTopOf="@+id/menuBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="5dp"
            android:background="@null"
            />

        <ImageButton
            android:id="@+id/btn_chatButton_activity_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_homeButton_activity_main"
            android:src="@drawable/unclickedchatbtn"
            android:clickable="true"
            android:background="@null"
            />

        <ImageButton
            android:id="@+id/btn_lifestyleButton_activity_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_homeButton_activity_main"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/lifestylebuttonclicked2"
            android:background="@null"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
