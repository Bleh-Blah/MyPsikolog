<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="15dp"
    android:background="@drawable/box_user_layout">

    <ImageView
        android:id="@+id/ivProfilePicture_appointment_layout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:src="@drawable/usericon" />

    <TextView
        android:id="@+id/tvName_appointment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ivProfilePicture_appointment_layout"
        android:fontFamily="@font/open_sans"
        android:text="Test Name"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLastChat_appointment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName_appointment_layout"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/ivProfilePicture_appointment_layout"
        android:fontFamily="@font/open_sans"
        android:text="" />

    <TextView
        android:id="@+id/tvRating_appointment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/open_sans"
        android:text="stars" />

    <TextView
        android:id="@+id/tvPrice_appoinment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName_appointment_layout"
        android:layout_alignStart="@+id/tvLastChat_appointment_layout"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/price_background"
        android:paddingHorizontal="5dp"
        android:text="Test Price"
        android:textColor="@color/white_darker" />

</RelativeLayout>